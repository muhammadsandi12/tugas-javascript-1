const Grade = (mtk, bahasaIndonesia, bahasaInggris, ipa) =>{
    let grade = ''
    let average 

        if(mtk == undefined || bahasaIndonesia == undefined || bahasaInggris == undefined || ipa == undefined  ){
            console.log('nilai tidak boleh kosong')
        } else{

            if(typeof(mtk) == 'number' && typeof(bahasaIndonesia) == 'number' && typeof(bahasaInggris) == 'number' && typeof(ipa) == 'number'){
                if(mtk < 0 || mtk > 100 && bahasaIndonesia < 0 || bahasaIndonesia > 100 && bahasaInggris < 0 || bahasaInggris > 100 && ipa < 0 || ipa > 100 ){
                    console.log('inputan nilai tidak boleh kurang dari 0 dan tidak boleh lebih dari 100')
                }else{
                    average = (mtk + bahasaIndonesia + bahasaInggris + ipa) /4
                    if(average >= 90){
                        grade = 'A'
                    }else if(average >= 80){
                        grade = 'B'
                    }else if(average >= 70){
                        grade = 'C'
                    }else if(average >= 60){
                        grade = 'D'
                    }else{
                        grade = 'D'
                    }

                    console.log(`Rata-rata = ${average} \nGrade = ${grade}`)
                }
            }else{
                console.log('inputan harus berupa angka')
            } 
        }
        

}

let mtk  = ''
let bahasaIndonesia = 90
let bahasaInggris = 100
let ipa = 1
Grade(mtk, bahasaIndonesia,bahasaInggris, ipa)









